{
    "name": "Nodejs-express-starter",
    "version": "1.0.0",
    "description": "Nodejs-expressjs starter kit with boilerplate code",
    "main": "./bin/index.ts",
    "bin": {
      "shzam": "./bin/index.ts"
    },
    "scripts": {
      "build": "rimraf ./build && tsc --incremental && tsc-alias",
      "eslint": "eslint . --ext .js,.ts",
      "upgrade": "npm update --save-dev && npm update --save",
      "test": "jest --detectOpenHandles --forceExit --coverage --verbose",
      "lint:fix": "eslint src --fix --ext .js,.jsx,.ts,.tsx .",
      "nibble": "eslint-nibble src --ext .js,.jsx,.ts,.tsx .",
      "prepare": "husky install",
      "prepare-ts": "npx ts-patch install -s"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
      "@types/jest": "^29.2.5",
      "@types/node": "^18.11.18",
      "@types/supertest": "^2.0.12",
      "@typescript-eslint/eslint-plugin": "^5.48.0",
      "@typescript-eslint/parser": "^5.48.0",
      "eslint-nibble": "^8.1.0",
      "eslint-plugin-import": "^2.26.0",
      "husky": "^8.0.0",
      "jest": "^29.3.1",
      "module-alias": "^2.2.2",
      "prettier": "^2.8.2",
      "ts-jest": "^29.0.5",
      "ts-node": "^10.9.1",
      "ts-patch": "^2.1.0",
      "tsc-alias": "^1.8.6",
      "tsconfig-paths": "^4.1.2",
      "typescript-transform-paths": "^3.4.6"
    },
    "dependencies": {
      "dotenv": "^16.0.3",
      "joi": "^17.7.0",
      "supertest": "^6.3.3",
      "typescript": "^4.9.4",
      "winston": "^3.8.2",
      "winston-daily-rotate-file": "^4.7.1",
      "yargs": "^17.7.2"
    }
  }
  